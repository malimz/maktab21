</head>
<body>


<!-------------------------------------- NavBar ------------------------------------------>
<div id="header">
<div class= "fixed-header">
   <div class="content-wrapper header-content">
      <div class="app-title">
         <div class="title">Welcome guest</div>
      </div>
      <form class="header-right-side ml-auto"  action="/panel/login" method="get"> 
         <button type="submit" class="btn">Sign-in</button>
      </form>
      <form class="header-right-side"  action="panel/signup" method="get"> 
        <button type="submit" class="btn">Sign-up</button>
      </form>
   </div>
</div>
</div>


<!-----------------------------------------Content---------------------------------------->
<div class="post">
  <div class="post-wrapper">

    <div class="user-info">
        <div class="user-avatar">
          <img src="" alt="author"/>
        </div>
        <div class="user-data">
          <div class="username">
            <p>username</p>
          </div>
          <div class="post-date">
            <p>Date</p>
          </div>
      </div>
    </div>

    <div class="post-content">
      <img src="" alt=""/>
      <div class='post-text'>
        <p> some text a bout this post</p>    
          /* data (image and text) is called from db and shown in these <img> and <p> tags */
      </div>
    </div>

    <div class="post-info">
      <div class="likes" onClick='{this.props.likeHandler}'>
        <a href="#">
          <div class="icon"><i class="far fa-heart"></i></div>
          <div class="count">Count</div>
        </a>
      </div>
      <div class="comments" onClick="{this.props.showComments}">
        <a href="#">
          <div class="icon"><i class="far fa-comment-alt"></i></div>
          <div class="count">Count</div>
        </a>
      </div>
    </div>

    <div class="comment-input">
      <form onSubmit="{this.props.addCommentHandler}">
        <input name="text" type="text" maxLength="200" placeholder="Write your comment here"/>
        <button class="submit-button" type="submit"></button>
      </form>
    </div>

    <div class="comment">
      <div class="user-data">
        <div class="username">
        <p>username</p>
        </div>
        <div class="comment-text">
          <p>comment body</p>
        </div>
      </div>
    </div>
  </div>
</div>



<!----------------------------------------------->

</html>









